  <!-- String concatenation is needed allow outputting a template tag -->
  <%- htmlWebpackPlugin.tags.bodyTags.map((tag) => { tag.attributes['src'] = "<" + "%= cdnUrl %" + ">" + tag.attributes['src']; tag.attributes['defer'] = true; return tag; }) %>

  <%%- content.head %>
  <%%- content.style %>
  <%%- content.data %>
</head>

<body>
  <%%- content.scripts %>

  <div id="react-modal-container"></div>
  <div id="react-root"><%%- content.body %></div>

  <!-- TODO: Do we need Parsely -->

  <script id="stripe-js" src="https://js.stripe.com/v3/" defer></script>

  <%% if (sd.SAILTHRU_CUSTOMER_ID) { %>
  <script type="text/javascript" defer>
    (function() {
      function loadHorizon() {
        var s = document.createElement('script');
        s.type = 'text/javascript';
        s.async = true;
        s.src = location.protocol + '//ak.sail-horizon.com/spm/spm.v1.min.js';
        var x = document.getElementsByTagName('script')[0];
        x.parentNode.insertBefore(s, x);
      }
      loadHorizon();
      function loadSailthru() {
        if(typeof Sailthru !== "undefined" && typeof Sailthru.init === "function"){
          Sailthru.init({ customerId: sd.SAILTHRU_CUSTOMER_ID });
        }
        else{
          setTimeout(loadSailthru, 250);
        }
      }
      var oldOnLoad = window.onload;
      window.onload = function() {
        if (typeof oldOnLoad === 'function') {
          oldOnLoad();
        }
        loadSailthru();
      };
    })();
  </script>
  <%% } %>
</body>

</html>
